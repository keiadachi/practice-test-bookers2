<%= flash[:book] %>
<%= render 'homes/header' %>


<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td><%= link_to user_path(@books.user) do %>
          <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size:'50x50', class: "attachment user profile_image fallback"  %></td>
      <% end %>
      <td><%= link_to user_path(@books.user) do %>
          <%= @user.name %></td>
      <% end %>
      <td><%= @books.title %></td>
      <td><%= @books.body %></td>
    <% if @user.id == current_user.id %>
    <%#ログインユーザーだったら以下できる %>
      <td><%= link_to "Edit",edit_book_path(@books.id) %></td>
      <td><%= link_to 'Destroy',book_path(@books.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    <% else %>
    <% end %>
  </tbody>
</table>

<%= render 'homes/info', user: @user %>

<%= render 'homes/post', book: @book %>